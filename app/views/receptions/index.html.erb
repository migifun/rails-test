<div class="card wide-card">
  <div class="header-row">
    <h1>受付一覧</h1>
    <div class="header-actions">
      <%= link_to "トップへ", root_path, class: "btn btn-secondary" %>
      <%= button_to "ログアウト", logout_path, method: :post, class: "btn btn-danger" %>
    </div>
  </div>

  <% if @receptions.any? %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>お名前</th>
          <th>会社名</th>
          <th>ご用件</th>
          <th>受付時刻</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @receptions.each do |reception| %>
          <tr>
            <td><%= reception.id %></td>
            <td><%= reception.name %></td>
            <td><%= reception.company %></td>
            <td><%= purpose_label(reception.purpose) %></td>
            <td><%= reception.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td>
              <%= button_to "削除", reception_path(reception),
                    method: :delete,
                    class: "btn btn-danger btn-sm",
                    data: { turbo_confirm: "本当に削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="empty-message">受付データはありません。</p>
  <% end %>
</div>
