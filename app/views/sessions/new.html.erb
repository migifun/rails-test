<div class="card">
  <h1>管理者ログイン</h1>

  <%= form_with url: login_path, method: :post do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, placeholder: "admin@example.com", required: true %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, required: true %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "トップへ戻る", root_path %>
  </div>
</div>
